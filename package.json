{
  "name": "franken-wc",
  "private": "true",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:core": "tsc && vite -c config/core.js build",
    "build:icon": "tsc && vite -c config/icon.js build",
    "build:wysiwyg": "tsc && vite -c config/wysiwyg.js build",
    "build:css": "vite -c config/css.js build",
    "build": "npm run build:core && npm run build:icon && npm run build:wysiwyg"
  },
  "dependencies": {
    "@tiptap/core": "^2.6.6",
    "@tiptap/extension-character-count": "^2.6.6",
    "@tiptap/extension-link": "^2.6.6",
    "@tiptap/extension-placeholder": "^2.6.6",
    "@tiptap/extension-text-align": "^2.6.6",
    "@tiptap/extension-underline": "^2.6.6",
    "@tiptap/starter-kit": "^2.6.6",
    "franken-ui": "^0.2.1-next.0",
    "lit": "^3.1.4",
    "lucide": "^0.428.0",
    "postcss": "^8.4.39",
    "slugify": "^1.6.6",
    "tailwindcss": "^3.4.4",
    "vite": "^5.3.1"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^12.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/js/wc.iife.js",
    "./dist/*": {
      "default": "./dist/*.js"
    }
  }
}
